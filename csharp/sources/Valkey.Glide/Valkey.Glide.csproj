<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(MSBuildThisFileDirectory)../../props/version.props"/>
  <Import Project="$(MSBuildThisFileDirectory)../../props/common.props"/>

  <PropertyGroup>
    <RootNamespace>Valkey.Glide</RootNamespace>
    <AssemblyName>Valkey.Glide</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <!-- MIT license -->
    <PackageReference Include="JetBrains.Annotations" Version="2024.3.0"/>
    <!-- MIT license -->
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.3"/>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Valkey.Glide.InterOp\Valkey.Glide.InterOp.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Language.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Language.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Language.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Language.resx</DependentUpon>
    </Compile>
    <Compile Update="Commands\CustomCommand.cs">
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
      <DependentUpon>CustomCommand.tt</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Commands\CustomCommand.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>CustomCommand.cs</LastGenOutput>
    </None>
    <Compile Update="CustomCommand.cs">
      <DependentUpon>CustomCommand.tt</DependentUpon>
    </Compile>
    <None Update="IGlideClient.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>IGlideClient.cs</LastGenOutput>
    </None>
    <Compile Update="IGlideClient.cs">
      <DependentUpon>IGlideClient.tt</DependentUpon>
    </Compile>
    <None Update="GlideClient.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>GlideClient.cs</LastGenOutput>
    </None>
    <Compile Update="GlideClient.cs">
      <DependentUpon>GlideClient.tt</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>
